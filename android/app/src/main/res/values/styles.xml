<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:datePickerDialogTheme">@style/datePickerTheme</item>
        <item name="android:timePickerDialogTheme">@style/timePickerTheme</item>
    </style>
 
    <style name="datePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#ff6347</item>
        <item name="colorControlActivated">#c99284</item>
        <item name="colorControlHighlight">#ef9686</item>
    </style>
    <style name="timePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#ff6347</item>
        <item name="android:textColorPrimary">#c99284</item>
    </style>

</resources>
